{
  "name": "veto-leash",
  "version": "0.1.3",
  "description": "Semantic permissions for AI coding agents â€” sudo for AI agents",
  "main": "./dist/cli.js",
  "bin": {
    "leash": "./dist/cli.js"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "ci": "pnpm build && pnpm test && pnpm typecheck",
    "release": "pnpm run ci && npm publish --access public && git push && git push --tags",
    "release:patch": "npm version patch && pnpm release",
    "release:minor": "npm version minor && pnpm release",
    "release:major": "npm version major && pnpm release",
    "prepublishOnly": "pnpm run ci"
  },
  "dependencies": {
    "@google/genai": "^1.0.0",
    "chokidar": "^4.0.3",
