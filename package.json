{
  "name": "veto-monorepo",
  "private": true,
  "description": "The permission layer for AI agents",
  "repository": {
    "type": "git",
    "url": "https://github.com/VulnZap/veto"
  },
  "scripts": {
    "build": "pnpm -r --filter './packages/*' build",
    "test": "pnpm -r --filter './packages/*' test",
    "typecheck": "pnpm -r --filter './packages/*' typecheck",
    "dev:cli": "pnpm --filter veto-cli dev",
    "dev:sdk": "pnpm --filter veto-sdk dev",
    "dev:web": "pnpm --filter @veto/web dev",
    "build:cli": "pnpm --filter veto-cli build",
    "build:sdk": "pnpm --filter veto-sdk build",
    "build:web": "pnpm --filter @veto/web build"
  },
  "devDependencies": {
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.15.0",
  "license": "Apache-2.0",
  "author": "Plaw, Inc.",
  "homepage": "https://veto.run"
}
