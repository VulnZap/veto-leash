  },
  "devDependencies": {
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "ai",
